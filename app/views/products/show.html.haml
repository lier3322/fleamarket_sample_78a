.header__box
  .header__box__main
    .main__icon
      = link_to root_path do
        = image_tag 'logo/logo.png', alt: 'title', height: '41', width: '140'
    .main__search
      = form_with(url: "#", local: true, method: :get, class: "search-form") do |form|
        = form.text_field :keyword, placeholder: "キーワードから探す", class: "search-input"
        = button_tag type: "submit", class: "search-btn" do
          %i.fas.fa-search.fa-lg
  .header__box__action

    %ul.action__list
      %li.list__category
        = link_to "#" do
          カテゴリー

      %li.list__brand
        = link_to "#" do
          ブランド
    %ul.action__user
      %li.user__login
        = link_to root_path, class: "login_btn" do
          ログイン
      %li.user__new
        = link_to root_path, class: "new_btn" do
          新規会員登録

.breadcrumbs
  %ul.breadcrumbs__test
    %li.link
      =link_to "#", class: "link__text" do
        FURIMA
    %li.link
      = icon("fa", "angle-right")
    %li.link
      =link_to "#", class: "link__text" do
        レディース
    %li.link
      = icon("fa", "angle-right")
    %li.link
      =link_to "#", class: "link__text" do
        トップス
    %li.link
      = icon("fa", "angle-right")
    %li.link
      =link_to "#", class: "link__text" do
        Tシャツ/カットソー(半袖/袖なし)
    %li.link
      = icon("fa", "angle-right")
    %li.link
      =link_to "#", class: "link__text" do
        テスト
  
.main-contents
  .main__show
    .contents
      .contents__text
        %h2.image-name
          テスト
      .contents__image
        = image_tag 'pict/beef.jpg', class: "beef-image"
        .contents__image__small
          = image_tag 'pict/beef.jpg', class: "beef-image-small"
        .contents__price
          %span.price
            ¥10000
        .contents__tax
          %span.tax
            (税込)送料込み
      .contents__sellBtn
        = link_to purchase_check_path, class: "purchaseBtn", method: :get do
          .link__sellBtn__text
            購入画面に進む
      .contents__detail
        .detail-text
          テストテストテストテストテストテスト
      .contents__table
        %table.main-table
          %tr.table
            %th.left-table 出品者
            %th.right-table あああ
          %tr.table
            %th.left-table カテゴリー
            %th.right-table
              %ul
                %li
                  =link_to "#", class: "table-category" do
                    レディース
                %li
                  =link_to "#", class: "table-category" do
                    トップス
                %li
                  =link_to "#", class: "table-category" do
                    Tシャツ/カットソー(半袖なし)
          %tr.table
            %th.left-table ブランド
            %th.right-table
          %tr.table
            %th.left-table 商品のサイズ
            %th.right-table
          %tr.table
            %th.left-table 商品の状態
            %th.right-table 新品/未使用
          %tr.table
            %th.left-table 配送料の負担
            %th.right-table 送料込み(出品者負担)
          %tr.table
            %th.left-table 発送元の地域
            %th.right-table
              =link_to "#", class: "table-category" do
                北海道
          %tr.table
            %th.left-table 発送日の目安
            %th.right-table 1-2日で発送
      .contents__option
        %ul.options
          %li.favorite
            = icon('fa', 'star')
            お気に入り 1
        %ul.options
          %li.report
            = icon('fa', 'flag')
            不適切な商品の通報
      .contents__relations
        .contents__relations--product
          .products
            =link_to "#", class: "relation" do
              レディースをもっと見る
            .relation-picture
              =link_to image_tag(src= "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/7/a001.png", class: "curryrice"), "#"
              .image__text
                %h3.product-name
                  product1
                %ul.image-price
                  %li.price-test 10000円
                  %li
                    = icon('far', 'thumbs-up')
                  1
                %p.tax-include
                  (税込)
      - if @product.user_id == current_user.id
        .contents__delete
          = link_to 'この商品を削除する', product_path(@product), method: :delete, data: { confirm: 'この商品を削除してよろしいですか' }, class:"contents__delete--btn"

= render "items/app_banner"
= render "items/footer"
= render "items/display_btn"